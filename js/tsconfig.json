{
  "include": ["src"],
  "exclude": [],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "lib",

    "target": "es2019",
    "module": "commonjs",

    "lib": ["es2020", "dom"],
    "declaration": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
  }
}
